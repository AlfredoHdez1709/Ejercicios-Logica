<Window x:Class="Proyecto_Euler.Ejercicios.PitagorasTriple"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Terna pitagórica" Height="300" Width="300">
    <Grid>
        <TextBlock HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="275"><Run Text="Una terna pitagórica es un conjunto de tres números naturales los cuales: a^2 + b^2= c^2                 Por ejemplo, 3^2 + 4^2 resulta en:"/><LineBreak/><Run Text="9 + 16 = 25 o sea:"/><LineBreak/><Run Text="3^2 + 4^2 = 5^2"/><LineBreak/><Run Text="Hay una terna pitagórica para la cual el resultado es 1000, encuentra el producto de estos tres números."/></TextBlock>
        <Button x:Name="btnAnswer" Content="Obtener respuesta" Height="21.495" Margin="10,150,10,0" VerticalAlignment="Top" Click="btnAnswer_Click"/>
        <TextBox x:Name="txtAnswer" Margin="10,180,10,0" TextWrapping="Wrap" VerticalAlignment="Top"/>

    </Grid>
</Window>
